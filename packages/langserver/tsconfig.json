{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./out",
        "paths": {
            "typeserver/*": [
                "../typeserver/src/*"
            ],
            "langserver/*": [
                "./src/*"
            ],
        },
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": [
        "../typeserver/src/**/*",
        "src/**/*",
        "**/*.js",
        "package.json", "typings/promise.d.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out",
        "debug.js",
    ]
}
