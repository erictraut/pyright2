{
    "name": "pyright-langserver",
    "displayName": "pyright",
    "description": "Language server for Python",
    "type": "module",
    "version": "2.0.0b1",
    "license": "MIT",
    "private": true,
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "clean": "shx rm -rf ./dist ./out",
        "esbuild:testserver": "esbuild src/tests/lsp/main.ts --bundle --platform=node --format=cjs --outfile=out/testserver.cjs --external:node:* --external:jsonc-parser",
        "test": "npm run esbuild:testserver && node --experimental-vm-modules $(which jest) --forceExit"
    },
    "dependencies": {
        "@yarnpkg/fslib": "2.10.4",
        "@yarnpkg/libzip": "2.3.0",
        "chokidar": "^3.6.0",
        "jsonc-parser": "^3.3.1",
        "smol-toml": "^1.3.1",
        "source-map-support": "^0.5.21",
        "tmp": "^0.2.3",
        "vscode-languageserver": "^10.0.0-next.10",
        "vscode-languageserver-textdocument": "1.0.12",
        "vscode-uri": "^3.1.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.0.1",
        "@types/tmp": "^0.2.6",
        "esbuild": "^0.25.5",
        "jest": "^30.0.0",
        "jest-junit": "^16.0.0",
        "shx": "^0.4.0",
        "ts-jest": "^29.4.0",
        "ts-loader": "^9.5.2",
        "typescript": "~5.8.3"
    }
}
